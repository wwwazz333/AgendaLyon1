                android:layout_height="wrap_content"
                android:text="title"

                android:layout_column="0"
                android:layout_row="1"/>

        <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="blabla"

                android:layout_column="1"
                android:layout_row="1"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
