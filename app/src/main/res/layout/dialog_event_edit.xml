                android:layout_column="0"
                android:layout_row="2"/>

        <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="blabla"

                android:layout_column="1"
                android:layout_row="2"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="salle"

                android:layout_column="0"
                android:layout_row="3"/>

        <TextView
                android:id="@+id/salle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="blabla"

                android:layout_column="1"
                android:layout_row="3"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="debut"

                android:layout_column="0"
                android:layout_row="4"/>

        <TextView
                android:id="@+id/debut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="blabla"

                android:layout_column="1"
                android:layout_row="4"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fin"

                android:layout_column="0"
                android:layout_row="5"/>

        <TextView
                android:id="@+id/fin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="blabla"

