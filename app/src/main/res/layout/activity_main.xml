<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.iutcalendar.MainActivity"
        android:orientation="vertical"
        android:id="@+id/rootLayout">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent"
                    android:id="@+id/relativLayout">

        <FrameLayout
                android:id="@+id/animFragment"
                android:layout_width="35dp" android:layout_height="35dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="25dp"
                android:layout_alignParentBottom="true"/>

    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/settingsBtn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_settings_ico"
            android:layout_marginEnd="24dp" android:layout_marginBottom="24dp"
            tools:ignore="SpeakableTextPresentCheck" android:contentDescription="@string/logo_settings"/>


    <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/tab_gap"
            app:layout_constraintTop_toTopOf="parent">


        <TextView
                android:id="@+id/currDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="@string/date_exemple"
                android:textColor="?attr/colorOnBackground"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textSize="22sp"/>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginVertical="@dimen/tab_gap">
            <LinearLayout
                    android:id="@+id/nameDayLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                <TextView
                        android:id="@+id/dayLundi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/Lundi_abv"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_weight="1"/>

                <TextView
                        android:id="@+id/dayMardi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/Mardi_abv"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_weight="1"/>
                <TextView
                        android:id="@+id/dayMercredi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/Mercredi_abv"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_weight="1"/>
                <TextView
                        android:id="@+id/dayJeudi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/Jeudi_abv"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_weight="1"/>
                <TextView
                        android:id="@+id/dayVendredi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/Vendredi_abv"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_weight="1"/>
                <TextView
                        android:id="@+id/daySamedi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/Samedi_abv"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_weight="1"/>
                <TextView
                        android:id="@+id/dayDimanche"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/Dimanche_abv"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/dayOfWeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/lundiNum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_weight="1"/>

                <TextView
                        android:id="@+id/mardiNum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_weight="1"/>
                <TextView
                        android:id="@+id/mercrediNum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_weight="1"/>
                <TextView
                        android:id="@+id/jeudiNum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_weight="1"/>
                <TextView
                        android:id="@+id/vendrediNum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_weight="1"/>
                <TextView
                        android:id="@+id/samediNum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_weight="1"/>
                <TextView
                        android:id="@+id/dimancheNum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textColor="?attr/colorOnBackground"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>


        <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="200dp"
        />

    </LinearLayout>
    <View android:id="@+id/actionView"
          android:layout_width="match_parent" android:layout_height="0dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintTop_toBottomOf="@id/headerLayout"/>


</androidx.constraintlayout.widget.ConstraintLayout>