<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/default_padding">


    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:gravity="center_vertical"
                  android:padding="@dimen/tab_gap" android:layout_toStartOf="@+id/is_activate"
                  android:layout_marginEnd="0dp" android:layout_alignParentStart="true"
                  android:layout_marginStart="0dp">

        <TextView android:id="@+id/horaire"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/exemple_hour"
                  android:textSize="48sp"
                  style="@style/subTitle"

                  android:layout_marginEnd="@dimen/tab_gap"/>
        <TextView android:id="@+id/date"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="@string/exmple_date"
                  android:textSize="32sp"/>

    </LinearLayout>
    <Switch
            android:id="@+id/is_activate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:minWidth="48dp" android:minHeight="48dp"/>
    <ImageButton
            android:id="@+id/remove_btn"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:src="@drawable/ic_basket"
            android:background="#00000000"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="poubelle" android:minWidth="48dp" android:minHeight="48dp"
            android:visibility="invisible"/>


</RelativeLayout>