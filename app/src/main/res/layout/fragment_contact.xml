<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.iutcalendar.settings.ContactFragment"
              android:orientation="vertical">


    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginStart="@dimen/tab_gap">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/ic_email"
                   android:layout_gravity="center"
                   android:foregroundGravity="center" android:contentDescription="@string/LogoMail"/>

        <TextView
                android:text="@string/myEmail"
                android:autoLink="email"
                android:textColor="@color/redOnePlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/minTactile" android:minHeight="@dimen/minTactile"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/default_padding"
                android:layout_marginStart="@dimen/tab_gap"/>
    </LinearLayout>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginStart="@dimen/tab_gap">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/ic_github"
                   android:layout_gravity="center"
                   android:foregroundGravity="center" android:contentDescription="@string/LogoGithub"/>
        <TextView
                android:text="@string/repoGithub"
                android:autoLink="web"
                android:textColor="@color/redOnePlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/minTactile" android:minHeight="@dimen/minTactile"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/default_padding"
                android:layout_marginStart="@dimen/tab_gap"/>
    </LinearLayout>


</LinearLayout>