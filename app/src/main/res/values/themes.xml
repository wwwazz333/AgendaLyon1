<resources>
    <!-- Base application theme. -->
    <style name="Theme.IUTCalendar" parent="Theme.IUTCalendarParent">
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item><!--Logo sur btn floating-->
        <!-- Customize your theme here. -->

        <item name="colorSurface">@color/altWhite</item><!-- Card background just au dessus de bg-->
        <item name="colorOnSurface">@color/black</item>

        <item name="backgroundColor">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <!--        <item name="android:textColor">@color/text_white</item>-->

    </style>
    <style name="Theme.IUTCalendarActionBar" parent="Theme.IUTCalendarParentActionBar">
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item><!--Logo sur btn floating-->
        <!-- Customize your theme here. -->

        <item name="colorSurface">@color/altWhite</item><!-- Card background just au dessus de bg-->
        <item name="colorOnSurface">@color/black</item>

        <item name="backgroundColor">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <!--        <item name="android:textColor">@color/text_white</item>-->

    </style>
    <style name="Theme.IUTCalendar.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.IUTCalendar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.IUTCalendar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


</resources>