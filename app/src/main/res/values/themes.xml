<resources>
    <!-- Base application theme. -->

    <style name="Theme.IUTCalendarActionBar" parent="Theme.IUTCalendarParentActionBar">
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item><!--Logo sur btn floating-->
        <!-- Customize your theme here. -->

        <item name="colorSurface">@color/altWhite</item><!-- Card background just au dessus de bg-->
        <item name="colorOnSurface">@color/black</item>

        <item name="backgroundColor">@color/white</item>
        <item name="colorOnBackground">@color/black</item>

        <item name="android:textColor">@color/text_black</item>

    </style>
    <style name="Theme.IUTCalendar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.IUTCalendar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="Theme.IUTCalendarActionBarNight" parent="Theme.IUTCalendarParentActionBar">
        <item name="colorSecondaryVariant">@color/red</item>
        <item name="colorOnSecondary">@color/white</item> <!--Logo sur btn floating-->
        <!-- Customize your theme here. -->

        <!--        <item name="colorOnBackground">@color/green</item>-->
        <item name="colorSurface">@color/grey</item> <!-- Card background just au dessus de bg-->
        <item name="colorOnSurface">@color/white</item>

        <item name="backgroundColor">@color/black</item>
        <item name="colorOnBackground">@color/white</item>


        <item name="android:textColor">@color/text_white</item>

    </style>
</resources>