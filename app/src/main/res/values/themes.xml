<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IUTCalendar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/redOnePlus</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/redOnePlus</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_red</item>
        <!-- Customize your theme here. -->

        <item name="colorSurface">@color/altWhite</item>
        <item name="backgroundColor">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorError">@color/red</item>

    </style>

    <style name="Theme.IUTCalendar.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">8dp</item>
        <item name="appWidgetPadding">4dp</item>
        <item name="appWidgetInnerRadius">4dp</item>
    </style>

    <style name="Theme.IUTCalendar.AppWidgetContainer"
           parent="Theme.IUTCalendar.AppWidgetContainerParent"/>


</resources>