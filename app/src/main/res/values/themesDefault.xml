<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IUTCalendarParent" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/redOnePlus</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/redOnePlus</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_red</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">?attr/backgroundColor</item>

        <!--        <item name="android:textColor">@color/text_white</item>-->

    </style>
    <style name="Theme.IUTCalendarParentActionBar" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/redOnePlus</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/redOnePlus</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_red</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">?attr/backgroundColor</item>

        <!--        <item name="android:textColor">@color/text_white</item>-->

    </style>

    <style name="Theme.IUTCalendar.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">8dp</item>
        <item name="appWidgetPadding">4dp</item>
        <item name="appWidgetInnerRadius">4dp</item>
    </style>

    <style name="Theme.IUTCalendar.AppWidgetContainer"
           parent="Theme.IUTCalendar.AppWidgetContainerParent"/>
</resources>