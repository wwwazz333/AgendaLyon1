<PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            app:title="URL"
            android:icon="@drawable/ic_link_url">

        <Preference
                app:fragment="com.iutcalendar.settings.URLSetterFragment"
                app:title="URL"
                app:summary="URL pour mettre à jour le calendrier"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="Général"
                        android:icon="@drawable/ic_settings_ico">
        <SwitchPreference
                app:key="show_update"
                app:title="afficher update"
                app:summary="afficher la date de la dernière maj. du calendrier"
                android:defaultValue="true"
        />

        <SwitchPreference
                app:key="revert_swaping_day"
                app:title="inverser défilement"
                app:summary="inverser le défilement des jours (swipe)"
                android:defaultValue="false"
        />

        <SwitchPreference
                app:key="summer_offset"
                app:title="heure d'été"
                app:summary="applique le décallager pour l'heure d'été"
                android:defaultValue="true"
        />

    </PreferenceCategory>

    <PreferenceCategory app:title="Fonctionnalité"
                        android:icon="@drawable/ic_feature_settings">
        <Preference
                app:fragment="com.iutcalendar.settings.ExplicationSettingsFragment"
                app:title="Utilisation"
                app:summary="aide pour utiliser toutes les fonctionnalité de cette application"/>
    </PreferenceCategory>


</PreferenceScreen>