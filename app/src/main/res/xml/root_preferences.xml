<PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            app:title="@string/url"
            android:icon="@drawable/ic_link_url">

        <Preference
                app:fragment="com.iutcalendar.settings.URLSetterFragment"
                app:title="@string/url"
                app:summary="URL pour mettre Ã  jour le calendrier"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/General"
                        android:icon="@drawable/ic_settings_ico">
        <SwitchPreference
                app:key="show_update"
                app:title="@string/show_update"
                app:summary="@string/show_date_description"
                android:defaultValue="true"
        />

        <SwitchPreference
                app:key="revert_swaping_day"
                app:title="@string/revert_swipe"
                app:summary="@string/revert_swipe_description"
                android:defaultValue="false"
        />

        <SwitchPreference
                app:key="summer_offset"
                app:title="@string/summer_offset"
                app:summary="@string/summer_offset_description"
                android:defaultValue="true"
        />
        <ListPreference
                android:key="language_selected"
                android:title="@string/choose_langue"
                android:summary="@string/choose_langue_description"
                android:defaultValue="fr"
                android:entryValues="@array/language_values"
                android:entries="@array/language_options"/>


        <ListPreference
                android:key="theme_selected"
                android:title="@string/Theme"
                android:summary="@string/themeLabelSettings"
                android:entryValues="@array/theme_values"
                android:entries="@array/theme_options"
                android:defaultValue="default"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/Feature"
                        android:icon="@drawable/ic_feature_settings">
        <Preference
                app:fragment="com.iutcalendar.settings.ExplicationSettingsFragment"
                app:title="@string/Usage"
                app:summary="@string/Usage_description"/>
    </PreferenceCategory>



</PreferenceScreen>